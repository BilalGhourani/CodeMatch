<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.details.UserDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:outlineAmbientShadowColor="@color/ambient_shadow"
            android:outlineSpotShadowColor="@color/spot_shadow"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            tools:ignore="MissingConstraints"
            tools:targetApi="p">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/name_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/name_text_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/username_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/name_container">

                    <TextView
                        android:id="@+id/username_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/username_text_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J121123"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/email_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/username_container">

                    <TextView
                        android:id="@+id/email_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/email_text_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J121123"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/phone_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/email_container">

                    <TextView
                        android:id="@+id/phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/phone_text_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J121123"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/website_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/phone_container">

                    <TextView
                        android:id="@+id/website_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/website_text_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J121123"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <!-- address container-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/address_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:outlineAmbientShadowColor="@color/ambient_shadow"
                    android:outlineSpotShadowColor="@color/spot_shadow"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/website_container"
                    tools:ignore="MissingConstraints"
                    tools:targetApi="p">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/background">

                        <TextView
                            android:id="@+id/address_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address "
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/address_view_divider"
                            android:layout_width="0dp"
                            android:layout_height="0.6dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/address_title" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/address_street_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/address_view_divider">

                            <TextView
                                android:id="@+id/address_street_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Street: "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/address_street_text_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123 Street"
                                android:textSize="14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/address_suite_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/address_street_container">

                            <TextView
                                android:id="@+id/address_suite_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Suite: "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/address_suite_text_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Suite 4"
                                android:textSize="14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/address_city_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/address_suite_container">

                            <TextView
                                android:id="@+id/address_city_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="City: "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/address_city_text_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Suite 4"
                                android:textSize="14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/address_zipcode_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/address_city_container">

                            <TextView
                                android:id="@+id/address_zipcode_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ZipCode: "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/address_zipcode_text_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textSize="14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/address_geo_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/address_zipcode_container">

                            <TextView
                                android:id="@+id/address_geo_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GEO: "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/address_geo_text_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textSize="14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <!-- company container-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/company_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:outlineAmbientShadowColor="@color/ambient_shadow"
                    android:outlineSpotShadowColor="@color/spot_shadow"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/address_card_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:targetApi="p">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/background">

                        <TextView
                            android:id="@+id/company_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company "
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/company_view_divider"
                            android:layout_width="0dp"
                            android:layout_height="0.6dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/company_title" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/company_name_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/company_view_divider">

                            <TextView
                                android:id="@+id/company_name_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Company: "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/company_name_text_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Example Company"
                                android:textSize="14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/company_catchPhrase_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/company_name_container">

                            <TextView
                                android:id="@+id/company_catchPhrase_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Catch Phrase: "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/company_catchPhrase_text_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorem ipsum dolor sit amet"
                                android:textSize="14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/company_bs_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/company_catchPhrase_container">

                            <TextView
                                android:id="@+id/company_bs_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BS: "
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/company_bs_text_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorem ipsum dolor sit amet"
                                android:textSize="14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>